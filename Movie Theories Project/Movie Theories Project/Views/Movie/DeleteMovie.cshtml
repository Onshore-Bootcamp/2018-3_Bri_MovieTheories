@using Movie_Theories_Project.Models;
@model MoviePO
@{
    ViewBag.Title = "DeleteMovie";
}

@if (Session["Role"] != null && (int)Session["Role"] == 3)
{
    <h2>Delete Movie</h2>
    using (Html.BeginForm("DeleteMovie", "Movie", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(model => Model.MovieId)
            <div class="form-group">
                @Html.TextBoxFor(model => Model.MovieId, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.MovieId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Delete Movie" />
            </div>
        </div>
    }
}

