@using Movie_Theories_Project.Models;
@model MovieTheoryPO
@{
    ViewBag.Title = "DeleteMovieTheory";
}

@if (Session["Role"] != null && (int)Session["Role"] == 3)
{
    <h2>Delete Movie Theory</h2>
    using (Html.BeginForm("DeleteMovieTheory", "MovieTheory", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(model => Model.MovieTheoryID)
            <div class="form-group">
                @Html.TextBoxFor(model => Model.MovieTheoryID, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.MovieTheoryID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Delete" />
            </div>
        </div>
    }
}
